<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:background="@color/White"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="1dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/child_list_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/plan_info_child_checkbox"
            android:layout_marginLeft="6dp"
            android:text="To-Do" />

        <Button
            android:id="@+id/child_List_item_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="开始"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:background="@color/colorAccent"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plan_info_child_checkbox"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
        </CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:layout_toLeftOf="@+id/textview_total_time"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textview_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /0h"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/child_List_item_button"
            android:layout_marginRight="6dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>